<div>
  <div>
    <h1>
      Income Planner
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h3>
      Add a new income:
    </h3>

    <form action="/insert_income" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="amount_box">
          Amount
        </label>

        <input type="text" id="amount_box" name="query_amount">
      </div>

      <div>
        <label for="expected_date_box">
          Expected date
        </label>

        <input type="date" id="expected_date_box" name="query_expected_date">
      </div>

      <div>
        <label for="income_type_box">
          Income type
        </label>

        <input type="text" id="income_type_box" name="query_income_type">
      </div>

      <button>
        Create income
      </button>
    </form>
  </div>
</div>

<hr>

<h3>My Current Incomes </h3>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Name
        </th>

        <th>
          Amount
        </th>

        <th>
          Expected Date
        </th>

        <th>
          Income Type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_incomes.each do |an_income| %>
      <tr>
        <td>
          <%= an_income.name %>
        </td>

        <td>
          <%= an_income.amount %>
        </td>

        <td>
          <%= an_income.expected_date %>
        </td>

        <td>
          <%= an_income.income_type %>
        </td>

        <td>
          <%= time_ago_in_words(an_income.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_income.updated_at) %> ago
        </td>

        <td>
          <a href="/incomes/<%= an_income.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
